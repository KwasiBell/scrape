<h1>saved articles</h1>

{{#each items}}

{{#if saved}}
<div class="card">
    <div class="card-body">
        <p class="saved-article" data-id={{this._id}}>{{title}}</p>
        <button class="bg-success btn-lg add-note" data-id={{this._id}}>Add Note</a>
        <button class="bg-info btn-lg view-note" data-id={{this._id}}>View Notes</a>
            {{else}}
            <p>{{title}}</p>
            {{/if}}
    </div>
</div>
{{/each}}


<div class="modal saved-note-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Note on Article</h5>
                <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="previous-notes">

                </div>
                <form>
                    <div class="form-group">
                        <label for="articleNote">Title</label>
                        <input type="text" class="form-control" id="note-title" placeholder="Enter title...">
                    </div>
                    <div class="form-group">
                        <label for="articleNote">Article note</label>
                        <input type="textarea" width="200" height="200" class="form-control" id="article-note" placeholder="Enter notes...">
                    </div>
                    <button type="submit" class="btn btn-primary save-submit-btn">Save</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary modal-close" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


<div class="modal previous-notes-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notes on Article</h5>
                <button type="button" class="close previous-notes-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="previous-notes">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary previous-notes-close" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
